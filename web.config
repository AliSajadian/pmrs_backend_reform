<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Django/Python handler configuration -->
    <handlers>
      <add name="Python FastCGI" path="*" verb="*" modules="FastCgiModule" scriptProcessor="C:\Python\python.exe|C:\inetpub\wwwroot\wfastcgi.py" resourceType="Unspecified" requireAccess="Script" />
    </handlers>
    
    <!-- Static content MIME types for images -->
    <staticContent>
      <!-- Remove existing MIME types to avoid conflicts -->
      <remove fileExtension=".jpg" />
      <remove fileExtension=".jpeg" />
      <remove fileExtension=".png" />
      <remove fileExtension=".gif" />
      <remove fileExtension=".webp" />
      <remove fileExtension=".svg" />
      <remove fileExtension=".bmp" />
      <remove fileExtension=".ico" />
      
      <!-- Add correct MIME types for images -->
      <mimeMap fileExtension=".jpg" mimeType="image/jpeg" />
      <mimeMap fileExtension=".jpeg" mimeType="image/jpeg" />
      <mimeMap fileExtension=".png" mimeType="image/png" />
      <mimeMap fileExtension=".gif" mimeType="image/gif" />
      <mimeMap fileExtension=".webp" mimeType="image/webp" />
      <mimeMap fileExtension=".svg" mimeType="image/svg+xml" />
      <mimeMap fileExtension=".bmp" mimeType="image/bmp" />
      <mimeMap fileExtension=".ico" mimeType="image/x-icon" />
    </staticContent>
    
    <!-- Configure static file serving -->
    <rewrite>
      <rules>
        <!-- Serve static files directly -->
        <rule name="Static Files" stopProcessing="true">
          <match url="^(static|media)/.*$" />
          <action type="None" />
        </rule>
        <!-- Send everything else to Django -->
        <rule name="Django" stopProcessing="true">
          <match url=".*" />
          <action type="Rewrite" url="/" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- Optional: Set caching headers for static content -->
    <httpProtocol>
      <customHeaders>
        <add name="Cache-Control" value="public, max-age=31536000" />
      </customHeaders>
    </httpProtocol>
    
    <!-- Optional: Configure compression -->
    <urlCompression doStaticCompression="true" doDynamicCompression="true" />
    
    <!-- Security headers -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="SAMEORIGIN" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
  
  <!-- Django app settings -->
  <appSettings>
    <add key="DJANGO_SETTINGS_MODULE" value="your_project.settings" />
    <add key="PYTHONPATH" value="C:\path\to\your\django\app" />
  </appSettings>
</configuration>